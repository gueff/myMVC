// MVC

error_reporting(E_ALL);
date_default_timezone_set('Europe/Berlin');

$aConfig['MVC_EVENT_LOG_RUN'] = false;      // logging of each simple "RUN" event into MVC_LOG_FILE_EVENT
$aConfig['MVC_LOG_AUTOLOADER'] = false;     // Log autoloader actions
$aConfig['MVC_LOG_FORCE_LINEBREAK'] = true; // force linebreaks in logfiles no matter what
