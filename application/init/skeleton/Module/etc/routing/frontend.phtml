    ['GET', 'POST'],
    '/',
    '\{module}\Controller\Index::index',
    $oDTRoutingAdditional->getPropertyJson()
);
\MVC\Route::get(
    '/404/',
    '\{module}\Controller\Index::notFound',
    $oDTRoutingAdditional->set_sTitle('404')
        ->set_sContent('Frontend/content/404.tpl')
        ->getPropertyJson()
