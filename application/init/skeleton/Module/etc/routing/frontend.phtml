    ->set_sCookieConsent('Frontend/content/_cookieConsent.tpl')
    ->set_sFooter('Frontend/layout/footer.tpl')
    ->set_aStyle(array (
        '/myMVC/assets/bootstrap-5.3.2-dist/css/bootstrap.min.css',
        '/myMVC/assets/fontawesome-free-6.4.2-web/css/all.min.css',
        '/myMVC/styles/myMVC.min.css',
